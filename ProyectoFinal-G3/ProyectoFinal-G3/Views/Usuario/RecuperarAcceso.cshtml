@model ProyectoFinal_G3.Models.Usuario

@{
    ViewData["Title"] = "Recuperar Acceso";
    Layout = "_LayoutExterno";
}
<link href="~/css/login.css" rel="stylesheet" />

<div class="col-lg-5 mx-auto">
    <br />
    <br />
    <div class="text-center mb-4">
        <img src="~/img/logo_sin_fondo.png" alt="Logo" style="height:300px; width:auto; max-width:100%; object-fit:contain;">
    </div>
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header">
            <h3 class="text-center my-3">Recuperar Acceso</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Usuario" asp-action="RecuperarAcceso" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Correo" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                    <label for="inputEmail">Correo</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Enviar correo</button>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-info mt-3">
                        @ViewBag.Mensaje
                    </div>
                }
            </form>
        </div>
    </div>
</div>
