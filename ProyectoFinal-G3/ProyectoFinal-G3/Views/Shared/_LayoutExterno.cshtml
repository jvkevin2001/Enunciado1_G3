<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Taller Mongo - @ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Fuentes -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-dark">
    <!-- Navbar Mejorado -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: var(--color-secundario); box-shadow: var(--sombra);">
        <div class="container-fluid">
            <!-- Botón de volver -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div id="layoutSidenav_content">
        <main class="py-4">
            <div class="container-fluid px-4">
                @RenderBody()
            </div>
        </main>

        <!-- Footer Mejorado -->
        <footer class="py-4 mt-auto" style="background-color: var(--color-secundario); border-top: 3px solid var(--color-primario);">
            <div class="container-fluid px-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <span class="text-white">
                            <strong>Taller Mongo</strong> &copy; @DateTime.Now.Year - Reparación de Equipos Agrícolas
                        </span>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <span class="text-white-50">
                            <i class="fas fa-map-marker-alt me-1" style="color: var(--color-primario);"></i> Dirección: [Tu dirección aquí]
                            <span class="d-none d-md-inline">|</span> <br class="d-md-none">
                            <i class="fas fa-phone me-1" style="color: var(--color-primario);"></i> Teléfono: [Tu teléfono]
                            <span class="d-none d-md-inline">|</span> <br class="d-md-none">
                            <i class="fas fa-envelope me-1" style="color: var(--color-primario);"></i> Email: [tu@email.com]
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>