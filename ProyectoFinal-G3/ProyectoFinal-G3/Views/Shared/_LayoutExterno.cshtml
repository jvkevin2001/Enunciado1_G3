<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Taller Mongo - @ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Fuentes -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">

    <!-- CSS -->
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-dark">
    <!-- Contenido Principal -->
    <div id="layoutAuthentication">

        <nav class="sb-topnav navbar navbar-expand navbar-dark">
            <div class="container-fluid">
                <!-- Botón de volver -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>
        </nav>

        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>


        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-primary mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">                        <div>
                            <span class="text-white">
                                <strong>Taller Mongo</strong> &copy; @DateTime.Now.Year - Reparación de Equipos Agrícolas
                            </span>
                        </div>
                        <div class="text-muted">
                            <i class="fas fa-map-marker-alt me-1"></i> Dirección: San Jose, Costa Rica
                            <span class="d-none d-md-inline">|</span> <br class="d-md-none">
                            <i class="fas fa-phone me-1" style="color: var(--color-primario);"></i> Teléfono: 2222-2222
                            <span class="d-none d-md-inline">|</span> <br class="d-md-none">
                            <i class="fas fa-envelope me-1" style="color: var(--color-primario);"></i> Email: soporte@tallermongo.com
                        </div>
                        <div>
                            <a href="#">Políticas de privacidad</a>
                            &middot;
                            <a href="#">Términos &amp; Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>