<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Taller Mongo - Reparación de Equipos Agrícolas</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="~/css/index.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark" style="padding: 0.5rem 1rem;">
        <!-- Contenedor principal del logo y toggle -->
        <div class="d-flex align-items-center" style="min-width: 220px;">
            <!-- Botón toggle para sidebar -->
            <button class="btn btn-link btn-sm me-3 text-white" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Logo - Contenedor flexible -->
            <div class="logo-container" style="height: 50px; display: flex; align-items: center;">
                <a class="navbar-brand m-0 p-0" asp-controller="Home" asp-action="Index" style="height: 100%; display: flex; align-items: center;">
                    <img src="~/img/logo_sin_fondo_2.png" alt="Taller Mongo"
                         style="height: 100%; width: auto; max-width: 180px; object-fit: contain;">
                </a>
            </div>
        </div>

        <!-- Espacio flexible para empujar el menú de usuario a la derecha -->
        <div class="flex-grow-1"></div>

        <!-- Menú de navegación derecha -->
        <ul class="navbar-nav ms-auto">
            @using Microsoft.AspNetCore.Http

            @{
                var rol = Context.Session.GetString("IdRol");
            }



            <!-- Dropdown de Cuenta -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw me-1"></i>
                    <span class="d-none d-lg-inline">Mi Cuenta</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><hr class="dropdown-divider" /></li>

                    @if (rol == "2")
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Usuario" asp-action="Registrarse" style="font-size: 0.85rem;">
                                <i class="fas fa-users me-1"></i>
                                <span class="d-none d-lg-inline">Agregar Empleados</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="Usuario" asp-action="CambiarContrasenna" style="font-size: 0.85rem;">
                            <i class="fas fa-key me-1"></i>
                            <span class="d-none d-lg-inline">Ajustes</span>
                        </a>
                    </li>


                    <a class="dropdown-item" asp-controller="Usuario" asp-action="CerrarSesion">
                        <i class="fas fa-door-open me-2"></i> Cerrar Sesión
                    </a>
                </ul>
            </li>
        </ul>
    </nav>


    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Principal</div>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Inicio
                        </a>

                        <div class="sb-sidenav-menu-heading">Operaciones</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                           data-bs-target="#collapseInventario" aria-expanded="false" aria-controls="collapseInventario">
                            <div class="sb-nav-link-icon"><i class="fas fa-tools"></i></div>
                            Reparaciones
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseInventario" aria-labelledby="headingOne"
                             data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-action="CrearReparacion" asp-controller="Reparaciones">Nueva Reparación</a>
                                <a class="nav-link" asp-action="Reparaciones" asp-controller="Reparaciones">En Proceso</a>
                                <a class="nav-link" asp-action="ReparacionesFinalizadas" asp-controller="Reparaciones">Historial</a>
                            </nav>
                        </div>


                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                           data-bs-target="#collapseVentas" aria-expanded="false" aria-controls="collapseVentas">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Ventas
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseVentas" aria-labelledby="headingOne"
                             data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Ventas" asp-action="CrearVenta">Nueva Venta</a>
                                <a class="nav-link" asp-controller="Ventas" asp-action="Ventas">Listado de Ventas</a>
                                <a class="nav-link" asp-controller="Ventas" asp-action="HistorialFacturas">Historial de Facturas</a>
                                <a class="nav-link" asp-controller="Inventario" asp-action="Index">Inventario</a>
                            </nav>
                        </div>
                        @if (rol == "2")
                        {
                            <div class="sb-sidenav-menu-heading">Administración</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                               data-bs-target="#collapseReportes" aria-expanded="false" aria-controls="collapseReportes">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                                Reportes
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>

                            <div class="collapse" id="collapseReportes" aria-labelledby="headingReportes"
                                 data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Reportes" asp-action="Clientes">Clientes</a>
                                    <a class="nav-link" asp-controller="Reportes" asp-action="HistorialVentas">Historial Ventas</a>
                                    <a class="nav-link" asp-controller="Reportes" asp-action="Inventario">Inventario</a>
                                    <a class="nav-link" asp-controller="Reportes" asp-action="Reparaciones">Reparaciones</a>
                                    <a class="nav-link" asp-controller="Reportes" asp-action="Usuarios">Empleados</a>
                                </nav>
                            </div>
                        }
                        <a class="nav-link" asp-controller="Clientes" asp-action="Principal">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-circle"></i></div>
                            Clientes
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()

                </div>
            </main>

            <footer class="py-4 mt-auto" style="background-color: var(--color-secundario); border-top: 3px solid var(--color-primario);">
                <div class="container-fluid px-4">
                    <div class="d-flex flex-column flex-md-row align-items-center justify-content-between small">
                        <div class="text-white mb-2 mb-md-0">
                            <strong>Taller Mongo</strong> &copy; @DateTime.Now.Year - Reparación de Equipos Agrícolas
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-map-marker-alt me-1" style="color: var(--color-primario);"></i> Dirección: Guápiles, Pococí, Limón, 50m Norte de Super Baterias, Guápiles centro |
                            <i class="fas fa-phone me-1" style="color: var(--color-primario);"></i> Teléfono: 8350-8124
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/facturacionventas.js"></script>
    <script src="~/js/facturacionreparaciones.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>