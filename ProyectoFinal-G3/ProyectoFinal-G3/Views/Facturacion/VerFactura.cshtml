@model ProyectoFinal_G3.Models.Factura
@{
    ViewData["Title"] = "Detalle de Factura";
}

<h2 class="text-white">Factura #@Model.Id_Factura</h2>

<p class="text-light">Cliente: @Model.ClienteNombre</p>
<p class="text-light">Fecha: @Model.FechaEmision.ToString("yyyy-MM-dd")</p>
<p class="text-light">Total: ₡@Model.Total</p>

<h4 class="text-white mt-4">Detalles</h4>
<table class="table table-bordered table-dark text-light">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Detalles)
        {
            <tr>
                <td>@d.ProductoNombre</td>
                <td>@d.Cantidad</td>
                <td>₡@(d.PrecioTotal / d.Cantidad)</td>
                <td>₡@d.PrecioTotal</td>
            </tr>
        }
    </tbody>
</table>
