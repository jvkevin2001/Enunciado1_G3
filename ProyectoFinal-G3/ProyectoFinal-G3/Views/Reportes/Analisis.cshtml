@model ProyectoFinal_G3.Models.ReporteAnalisisViewModel

@{
    ViewData["Title"] = "Análisis de Ventas y Servicios";
}

<h1 class="mt-4">Reporte de Análisis</h1>
<hr />

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Analisis" method="post" class="row g-3">
            <div class="col-md-4">
                <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
            </div>
            <div class="col-md-4">
                <label asp-for="FechaFin" class="form-label fw-bold"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-dark w-100"><i class="fas fa-search me-2"></i>Consultar</button>
            </div>
        </form>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Mensaje</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</div>

@if (Model.Ventas.Any() || Model.Servicios.Any())
{
    <div class="mb-3">
        <form asp-action="ExportarAnalisis" method="post" class="d-flex justify-content-end align-items-center gap-2">
            <input type="hidden" asp-for="FechaInicio" />
            <input type="hidden" asp-for="FechaFin" />
            <select asp-for="Formato" class="form-select w-auto">
                <option value="PDF">PDF</option>
                <option value="Excel">Excel</option>
            </select>
            <button type="submit" class="btn btn-success"><i class="fas fa-file-export me-2"></i>Exportar</button>
        </form>
    </div>

    <h4>Ventas</h4>
    <div class="table-responsive mb-5">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Usuario</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model.Ventas)
                {
                    <tr>
                        <td>@venta.Fecha</td>
                        <td>@venta.Cliente</td>
                        <td>@venta.Usuario</td>
                        <td>@venta.Producto</td>
                        <td>@venta.Cantidad</td>
                        <td>₡@venta.Total.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h4>Servicios</h4>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Usuario</th>
                    <th>Servicio</th>
                    <th>Costo</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Servicios)
                {
                    <tr>
                        <td>@s.Fecha</td>
                        <td>@s.Cliente</td>
                        <td>@s.Usuario</td>
                        <td>@s.Servicio</td>
                        <td>₡@s.Costo.ToString("N2")</td>
                        <td>@s.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
