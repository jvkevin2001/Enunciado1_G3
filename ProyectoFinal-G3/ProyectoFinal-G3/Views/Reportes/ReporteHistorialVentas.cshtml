@model IEnumerable<ProyectoFinal_G3.ViewModels.ReporteHistorialVentaViewModel>

@{
    ViewData["Title"] = "Historial de Ventas";
}

<h1 class="mt-4">Historial de Ventas</h1>
<hr />

<div class="mb-3">
    <a href="@Url.Action("ExportarHistorialVentas", "Reportes", new { formato = "PDF" })" class="btn btn-danger">Exportar PDF</a>
    <a href="@Url.Action("ExportarHistorialVentas", "Reportes", new { formato = "Excel" })" class="btn btn-success">Exportar Excel</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="HistorialVentas" method="post" class="row g-3">
            <div class="col-md-5">
                <label class="form-label fw-bold">Fecha Inicio</label>
                <input type="date" name="fechaInicio" class="form-control" />
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold">Fecha Fin</label>
                <input type="date" name="fechaFin" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="fas fa-search me-2"></i>Consultar
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Inventario</th>
                    <th>Cantidad</th>
                    <th>Precio línea</th>
                    <th>Total venta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@h.NombreCliente</td>
                        <td>@h.Id_Inventario</td>
                        <td class="text-end">@h.Cantidad</td>
                        <td class="text-end">₡@h.PrecioLinea.ToString("N2")</td>
                        <td class="text-end fw-semibold">₡@h.TotalVentaFactura.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay resultados para el rango seleccionado.</p>
}