@model List<ProyectoFinal_G3.Models.HistorialVentaReporte>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Reporte Historial de Ventas</h4>
        </div>
        <hr />

        <!-- Filtros -->
        <form method="get" asp-controller="Reportes" asp-action="HistorialVentas" class="mb-3 row">
            <div class="col-md-4">
                <label>Fecha Inicio</label>
                <input type="text" class="form-control"
                       name="fechaInicio"
                       placeholder="dd/MM/yyyy"
                       value="@ViewBag.FechaInicio" />
            </div>
            <div class="col-md-4">
                <label>Fecha Fin</label>
                <input type="text" class="form-control"
                       name="fechaFin"
                       placeholder="dd/MM/yyyy"
                       value="@ViewBag.FechaFin" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>

        <div class="mb-3">
            <a href="@Url.Action("ExportarHistorialVentasCSV", "Reportes", new { fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin })"
               class="btn btn-success">Exportar Excel (CSV)</a>
            <a href="@Url.Action("ExportarHistorialVentasPDF", "Reportes", new { fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin })"
               class="btn btn-danger">Exportar PDF</a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover table-dark text-white">
                <thead>
                    <tr>
                        <th>ID Venta</th>
                        <th>Cliente</th>
                        <th>Usuario</th>
                        <th>Fecha Venta</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Id_Venta</td>
                                <td>@v.Cliente</td>
                                <td>@v.Usuario</td>
                                <td>@v.FechaVenta.ToString("dd/MM/yyyy")</td>
                                <td>@v.TotalVenta.ToString("C", new System.Globalization.CultureInfo("es-CR"))</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No hay ventas en el rango de fechas seleccionado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
