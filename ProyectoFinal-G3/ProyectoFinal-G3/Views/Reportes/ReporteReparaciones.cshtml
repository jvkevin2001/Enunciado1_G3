@model List<ProyectoFinal_G3.Models.Reparacion>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Reporte de Reparaciones</h4>
        </div>
        <hr />

        <form method="get" asp-controller="Reportes" asp-action="Reparaciones" class="mb-3 row">
            <div class="col-md-4">
                <label>Fecha Inicio</label>
                <input type="text" class="form-control"
                       name="fechaInicio"
                       placeholder="dd/MM/yyyy"
                       value="@(ViewBag.FechaInicio ?? "")" />
            </div>
            <div class="col-md-4">
                <label>Fecha Fin</label>
                <input type="text" class="form-control"
                       name="fechaFin"
                       placeholder="dd/MM/yyyy"
                       value="@(ViewBag.FechaFin ?? "")" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>

        <div class="mb-3">
            <a href="@Url.Action("ExportarReparacionesCSV", "Reportes", new { fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin })"
               class="btn btn-success">Exportar Excel (CSV)</a>
            <a href="@Url.Action("ExportarReparacionesPDF", "Reportes", new { fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin })"
               class="btn btn-danger">Exportar PDF</a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover table-dark text-white">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Equipo</th>
                        <th>Tipo Máquina</th>
                        <th>Fecha Servicio</th>
                        <th>Fecha Salida</th>
                        <th>Costo</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id_Reparacion</td>
                                <td>@r.Cliente</td>
                                <td>@r.EquipoDescripcion</td>
                                <td>@r.TipoMaquina</td>
                                <td>@r.FechaServicio.ToString("dd/MM/yyyy")</td>
                                <td>@(r.FechaSalida?.ToString("dd/MM/yyyy") ?? "Pendiente")</td>
                                <td>@r.CostoServicio.ToString("C", new System.Globalization.CultureInfo("es-CR"))</td>
                                <td>@r.Estado</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No hay reparaciones en el rango de fechas seleccionado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
