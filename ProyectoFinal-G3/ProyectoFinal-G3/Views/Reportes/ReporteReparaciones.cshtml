@model IEnumerable<ProyectoFinal_G3.ViewModels.ReporteReparacionViewModel>

@{
    ViewData["Title"] = "Reporte de Reparaciones";
}

<h1 class="mt-4">Reporte de Reparaciones</h1>
<hr />

<div class="mb-3">
    <a href="@Url.Action("ExportarClientes", "Reportes", new { formato = "PDF" })" class="btn btn-danger">Exportar PDF</a>
    <a href="@Url.Action("ExportarClientes", "Reportes", new { formato = "Excel" })" class="btn btn-success">Exportar Excel</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Reparaciones" method="post" class="row g-3">
            <div class="col-md-5">
                <label class="form-label fw-bold">Fecha Inicio</label>
                <input type="date" name="fechaInicio" class="form-control" />
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold">Fecha Fin</label>
                <input type="date" name="fechaFin" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-dark w-100">
                    <i class="fas fa-search me-2"></i>Consultar
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered" id="tablaReparaciones">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Usuario</th>
                    <th>Servicio</th>
                    <th>Costo</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@r.Cliente</td>
                        <td>@r.Usuario</td>
                        <td>@r.Servicio</td>
                        <td>₡@r.Costo.ToString("N2")</td>
                        <td>@r.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
