@model List<ProyectoFinal_G3.Models.FacturaVenta>

<h2 class="text-white">Historial de Facturas</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-dark table-bordered text-light">
        <thead>
            <tr>
                <th>Id Factura</th>
                <th>Id Venta</th>
                <th>Fecha Emisión</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Id_Factura</td>
                    <td>@f.Id_Venta</td>
                    <td>@f.FechaEmision.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>₡@f.Total</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-warning">No hay facturas registradas.</p>
}
