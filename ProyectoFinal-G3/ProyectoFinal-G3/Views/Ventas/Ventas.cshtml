@model List<ProyectoFinal_G3.Models.Venta>
@{
    ViewData["Title"] = "Ventas";
}

<h2 class="text-white">Ventas</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-dark table-bordered text-light">
        <thead>
            <tr>
                <th>ID Venta</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Id_Venta</td>
                    <td>@(v.Cliente?.NombreCliente ?? "Sin Cliente")</td>
                    <td>@v.FechaVenta.ToString("yyyy-MM-dd")</td>
                    <td>₡@v.Total</td>
                    <td>
                        <a asp-action="DetalleVenta" asp-route-id="@v.Id_Venta" class="btn btn-sm btn-outline-info">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-light">No hay ventas registradas.</p>
}
